<h1 id="title">GAMETIME</h1>
<h2 id="sub_title">Leaderboard</h2>
<p id="h_title">NFL PRE-SEASON // <a href="/matches">see all matches</a></p>

<table>
  <tr class="top">
      <td>Team</td>
      <td>Wins</td>
      <td>Losses</td>
  </tr>
  <% @leaderboard.each do |team| %>
    <tr>
      <td><a href="/teams/<%= team[:name] %>"><%= team[:name] %></a></td>
      <td><%= team[:wins] %></td>
      <td><%= team[:losses] %></td>
    </tr>
  <% end %>
</table>
